{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install && npm --prefix frontend install",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
